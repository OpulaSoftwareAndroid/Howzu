<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/user_placeholder" />

            <LinearLayout
                android:id="@+id/SliderDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.hitasoft.app.customclass.CustomTextView
                    android:id="@+id/txtname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:fonts="font_regular.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="14dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mapmarker" />

                    <com.hitasoft.app.customclass.CustomTextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        app:fonts="font_regular.ttf" />
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="14dp"-->
                    <!--android:layout_marginTop="2dp"-->
                    <!--android:layout_marginRight="14dp">-->

                    <!--<ImageView-->
                        <!--android:layout_width="18dp"-->
                        <!--android:layout_height="18dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:src="@drawable/ic_beg" />-->

                    <!--<com.hitasoft.app.customclass.CustomTextView-->
                        <!--android:id="@+id/textViewUserStudy"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="4dp"-->
                        <!--android:textAppearance="@android:style/TextAppearance.Medium"-->
                        <!--android:textColor="@color/colorGray"-->
                        <!--android:textSize="14dp"-->
                        <!--app:fonts="font_regular.ttf" />-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:id="@+id/linearLayoutBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.hitasoft.app.customclass.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:text="Bio"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        app:fonts="font_regular.ttf" />

                    <com.hitasoft.app.customclass.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:id="@+id/textViewBio"
                        android:layout_marginRight="12dp"
                        android:text="kfrkjfksjdfksdjfksdfiewruisefikjfkzxjfcknzjcknkjznxzjxnczmxncmzxcnzmxcnzmxcnzmxcnzmxcnzmnczxmcnfkjhdsjfhsjdfhskdjfhskjfhskdjfhsjdfh"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        app:fonts="font_regular.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_matchmaker_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorLightGray"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.hitasoft.app.customclass.RoundedImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/user_placeholder"
                            app:border_color="#ffffff"
                            app:border_width="3dp"
                            app:corner_radius="100dip"
                            app:round_background="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <com.hitasoft.app.customclass.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="Angelina jolie"
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                app:fonts="font_regular.ttf" />

                            <com.hitasoft.app.customclass.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="Matchmaker"
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:textColor="@color/colorGray"
                                android:textSize="14dp"
                                app:fonts="font_regular.ttf" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.hitasoft.app.customclass.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kfrkjfefikjfkzxjfcknzjcknkjznxzjxnczmxncmzxcnzmxcnzmxcnzmxcnzmxcnzmnczxmcnfkjhdsjfhsjdfhskdjfhskjfhskdjfhsjdfh"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        app:fonts="font_regular.ttf" />
                </LinearLayout>

                <com.hitasoft.app.customclass.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:text="Interests"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:fonts="font_regular.ttf" />

                <com.hitasoft.app.customclass.LaybelLayout
                    android:id="@+id/laybel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_wechat"
                        android:tint="@color/onlineColor" />

                    <com.hitasoft.app.customclass.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:text="My Members"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        app:fonts="font_regular.ttf" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_my_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:divider="@null"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center">

                    <com.hitasoft.app.customclass.CustomTextView
                        android:id="@+id/help_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/gray_rounded_corner"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:text="@string/help"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />

                    <LinearLayout
                        android:id="@+id/lin_without_matchmaker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.hitasoft.app.customclass.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/without_matchmaker_member"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            app:fonts="font_regular.ttf" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_without_matchmaker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:divider="@null" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_dating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.hitasoft.app.customclass.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:text="Matchmaker can help you"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        app:fonts="font_regular.ttf" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/linearLayoutSendFriendRequest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="6dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/gray_bg"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgAsk"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_ask"
                                android:tint="@color/white" />

                            <com.hitasoft.app.customclass.CustomTextView
                                android:id="@+id/txtAsk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:text="Ask To Match"
                                android:textColor="@color/white"
                                android:textSize="10dp"
                                app:fonts="font_regular.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/gray_bg_border"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgVideo"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_video" />

                            <com.hitasoft.app.customclass.CustomTextView
                                android:id="@+id/txtVideo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:text="Video Date"
                                android:textSize="10dp"
                                app:fonts="font_regular.ttf" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.33"
                            android:background="@drawable/gray_bg_border"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgDinner"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_dinner" />

                            <com.hitasoft.app.customclass.CustomTextView
                                android:id="@+id/txtDinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:gravity="center"
                                android:text="Invite For Dinner"
                                android:textSize="10dp"
                                app:fonts="font_regular.ttf" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</ScrollView>