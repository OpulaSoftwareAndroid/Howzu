        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomLay"
            android:visibility="gone"
            android:layout_marginBottom="130dp">

            <LinearLayout
                android:id="@+id/lin_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/black_round_opacity"
                android:gravity="end"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/open"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingLeft="4dp"
                    android:src="@drawable/ic_rightarrow" />
            </LinearLayout>


            <LinearLayout
            android:id="@+id/my_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/black_round_opacity"
            android:gravity="center"
            android:visibility="gone">


            <ImageView
                android:id="@+id/close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingLeft="4dp"
                android:src="@drawable/ic_leftarrow" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageViewShowComments"
                android:layout_margin="3dp"
                android:src="@drawable/ic_comment" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageViewAddComments"
                android:layout_margin="3dp"
                android:src="@drawable/ic_like" />

            <Switch
                android:id="@+id/chkNotification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:checked="true"
                android:thumb="@drawable/customswitchselector"
                android:track="@drawable/custom_track" />


        </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearLayoutProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageViewReload"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_reload" />

            <ImageView
                android:id="@+id/imageViewUnmatch"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_dislike" />


            <ImageView
                android:id="@+id/imageViewMatch"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_like" />


            <ImageView
                android:id="@+id/imageViewMatchMakerProfile"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_matchmaker" />


            <ImageView
                android:id="@+id/comments"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_comment"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.hitasoft.app.customclass.CustomTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Selena Gomez,24"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:fonts="font_regular.ttf" />

            <com.hitasoft.app.customclass.CustomTextView
                android:id="@+id/textViewProfileLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="Hermosa Beach,Los Angeles,USA"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:fonts="font_light.ttf" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_info" />

        <ImageView
            android:id="@+id/swipe_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:alpha="0"
            android:src="@drawable/nope" />

        <ImageView
            android:id="@+id/swipe_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:alpha="0"
            android:src="@drawable/like" />

    </RelativeLayout>


</RelativeLayout>
