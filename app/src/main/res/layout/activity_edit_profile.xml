<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/back"
            android:tint="@color/secondaryText"
            android:visibility="visible" />

        <com.hitasoft.app.customclass.CustomTextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:visibility="visible"
            app:fonts="font_regular.ttf" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/actionbar"
        android:background="@color/dividerColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSave"
        android:layout_below="@+id/actionbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.hitasoft.app.customclass.CustomTextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/name"
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />


                    <com.hitasoft.app.customclass.CustomEditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/txtName"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:inputType="textPersonName"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:cursorVisible="true"
                        android:padding="15dp"
                        android:textColor="@color/primaryText"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5dp"
                    android:background="@color/dividerColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.hitasoft.app.customclass.CustomTextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/email"
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />

                    <com.hitasoft.app.customclass.CustomTextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/email"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/primaryText"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5dp"
                    android:background="@color/dividerColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.hitasoft.app.customclass.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/age"
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />

                    <com.hitasoft.app.customclass.CustomEditText
                        android:id="@+id/edtAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/primaryText"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5dp"
                    android:background="@color/dividerColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.hitasoft.app.customclass.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/gender"
                        android:textColor="@color/secondaryText"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/btnMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:paddingStart="0dp"
                            android:text="Male"
                            android:textColor="@drawable/interest_text_selector"
                            android:textSize="16sp"
                            android:theme="@style/PinkRadioBuButton" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/btnFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:checked="false"
                            android:text="Female"
                            android:textColor="@drawable/interest_text_selector"
                            android:textSize="16sp"
                            android:theme="@style/PinkRadioBuButton" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="10dp"
                    android:background="@color/dividerColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.hitasoft.app.customclass.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/about_you"
                    android:textColor="@color/secondaryText"
                    android:textSize="16sp"
                    app:fonts="font_regular.ttf" />

                <com.hitasoft.app.customclass.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/what_makes_you_stand_out"
                    android:textColor="@color/secondaryText"
                    android:textSize="16sp"
                    app:fonts="font_regular.ttf" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/aboutLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:theme="@style/EmailTextLabel"
                    android:visibility="visible"
                    app:hintTextAppearance="@style/EmailHintLabel">

                    <com.hitasoft.app.customclass.CustomEditText
                        android:id="@+id/edtAbout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="textMultiLine"
                        android:maxLength="250"
                        android:maxLines="10"
                        android:paddingBottom="5dp"
                        android:paddingStart="0dp"
                        android:paddingTop="5dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/primaryText"
                        android:textColorHint="@color/secondaryText"
                        android:textSize="16sp"
                        app:fonts="font_regular.ttf" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5dp"
                    android:background="@color/dividerColor" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/mainLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hitasoft.app.customclass.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:layout_anchorGravity="center_horizontal|center_vertical"
            wheel:matProg_barColor="@color/colorPrimary"
            wheel:matProg_progressIndeterminate="true" />

    </RelativeLayout>

    <com.hitasoft.app.customclass.CustomTextView
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/primary_rounded_corner"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:fonts="font_regular.ttf" />

</RelativeLayout>